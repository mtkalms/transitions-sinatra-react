{
  "name": "Transitions",
  "features": {
    "ghcr.io/devcontainers/features/node": {
      "version": "22.18.0"
    },
    "ghcr.io/devcontainers/features/ruby": {
      "version": "3.4.5"
    }
  },
  "dockerComposeFile": "../compose.yml",
  "service": "app",
  "runServices": [
    "db",
    "app"
  ],
  "workspaceFolder": "/opt/project",
  "remoteEnv": {
    "TNS_ADMIN": "/opt/project/config",
    "FRONTEND_PORT": "3000",
    "BACKEND_PORT": "4567"
  },
  "postCreateCommand": [
    ".devcontainer/install_dependencies.sh"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "Oracle.sql-developer"
      ]
    }
  }
}